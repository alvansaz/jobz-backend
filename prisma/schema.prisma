generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Job {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    salary      Int
    tags        String[]
    company     Company  @relation(fields: [companyId], references: [id])
    companyId   String   @db.ObjectId
}

model Company {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    logo        String?
    email       String  @unique
    jobs        Job[]
}
